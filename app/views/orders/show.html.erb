
<div class="container">
   <h2 class="text-center">Order Details</h2>
   <%= button_to 'Go to dashboard', root_path, method: :get, type: "button", class: "btn btn-primary", style: "font-size:15px;"%>
   <br>



   <br><br>
   <table class="table">
   <thead><th>Name</th><th>Price</th><th>Quantity</th><th>Sub Total</th></thead>
   <tbody>
      <%@total = 0%>
      <%@order_details.each do |order_detail|%>
         <%@product = Product.find(order_detail.product_id)%>
         <tr>
         
               <td> <%=@product.name%></td>
               <td> Rs <%=@product.price%></td>
               
               <td><%=order_detail.quantity%></td>
               <td> Rs <%=@product.price * order_detail.quantity%></td>
               <%@total = @total  + (@product.price * order_detail.quantity)%>
            
         </tr>
      <%end%>
   </tbody>
   </table>

   <h2>Total : Rs <%=@total%></h2>
</div>
